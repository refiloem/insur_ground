<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.financialfitnessbunnies.zakayaka.PolicyProfile">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:elevation="8dp"
            android:orientation="vertical"
            android:background="@drawable/insurance_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/card_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="105dp"
                    android:text="Policy Card"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="#fff"
                    android:text="4592  9202  8888  2018"
                    android:textSize="20sp">

                </TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Premium"
                        android:textColor="#fff"
                        android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="R1,500.00"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textColor="#fff"
                        android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:textColor="#fff"
                            android:text="11/18 - 06/19"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="10sp"
                    android:text="Ms  C  M   Dlamini"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#929292"
                android:text="DASHBOARD " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="244dp">

                    <android.support.v7.widget.CardView

                        style="@style/MyCardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_marginTop="25dp">

                    <LinearLayout
                        android:id="@+id/btn_mywheels"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="3dp"
                        android:clickable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:background="@drawable/dashboard_button">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/car"
                            android:padding="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:text="My Wheels"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="#cbcbcb"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"
                            android:text="View more               >" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_myassets"
                        android:layout_marginLeft="175dp"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:foreground="?android:selectableItemBackground"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:background="@drawable/dashboard_button">

                        <ImageView
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:background="@drawable/gadget"
                            android:padding="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:text="My Assets"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="#cbcbcb"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"
                            android:text="View more               >"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_payment"
                        android:layout_marginLeft="345dp"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:elevation="5dp"
                        android:background="@drawable/dashboard_button">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/pay"
                            android:padding="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:text="Pay"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="#cbcbcb"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="11sp"
                            android:text="Pay premiums               >"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_myclaims"
                        android:layout_marginLeft="515dp"
                        android:layout_width="150dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:elevation="5dp"
                        android:background="@drawable/dashboard_button">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/contract"
                            android:padding="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:text="My Claims"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="#cbcbcb"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="11sp"
                            android:text="View more               >"/>
                    </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_riskprofile"
                            android:layout_marginLeft="685dp"
                            android:layout_width="150dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:elevation="5dp"
                            android:background="@drawable/dashboard_button">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/contract"
                                android:padding="10dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Risk Profile"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="10dp"
                                android:background="#cbcbcb"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="11sp"
                                android:text="View more               >"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </HorizontalScrollView>

            </LinearLayout>


    </LinearLayout>

</LinearLayout>
