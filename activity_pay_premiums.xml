<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.financialfitnessbunnies.zakayaka.PayPremiums"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/payment_dashboard"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_back_arrow_24dp"
            android:backgroundTint="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay premiums"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:textColor="#fff"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/payment_dashboard">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="185dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            android:orientation="vertical"
            android:background="@drawable/insurance_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/card_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Policy Card"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="#fff"
                    android:text="4592  9202  8888  2018"
                    android:textSize="20sp">

                </TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Validity"
                            android:textColor="#fff"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="monospace"
                            android:text="06/22"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="10sp"
                    android:text="Ms  C  M   Dlamini"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="#5ce6e6e6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:elevation="5dp"
            android:background="@drawable/payment_fields">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bar" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="12sp"
                android:text="Bill Date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_margin="15dp"
                android:textColor="#000"
                android:text="29 March, 2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:elevation="5dp"
            android:background="@drawable/payment_fields">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_idcard" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="12sp"
                android:text="Member ID"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_margin="15dp"
                android:text="45900321" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:elevation="5dp"
            android:background="@drawable/payment_fields">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_paydue" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="12sp"
                android:text="Total Due"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_margin="15dp"
                android:text="R1,500.00" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:shadowColor="@android:color/transparent"
        android:background="@drawable/shapelogin"
        android:layout_width="255dp"
        android:layout_height="38dp"
        android:elevation="10dp"
        android:textColor="#fff"
        android:text="Pay now"
        android:textSize="16sp" />

</LinearLayout>
